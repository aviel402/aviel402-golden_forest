{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    // בקשות שמתחילות ב-/api/ יופנו לקוד הפייתון
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    
    // **** כאן התיקון הקריטי והחשוב ביותר ****
    // כל בקשה אחרת תטופל כבקשה לקובץ סטטי מתוך תיקיית public
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
